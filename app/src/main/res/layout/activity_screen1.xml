<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_purple"
    tools:context=".Screen1">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="141dp"
        android:layout_height="107dp"
        android:elevation="8dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.161">

        <CheckBox
            android:id="@+id/cb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="0dp">

            <ImageView
                android:id="@+id/mudguardi"
                android:layout_width="54dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/mudguard" />

            <TextView
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Mudguard" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="141dp"
        android:layout_height="107dp"
        android:elevation="8dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.364"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.161">

        <CheckBox
            android:id="@+id/cb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout_editor_absoluteX="54dp"
                    tools:layout_editor_absoluteY="0dp">

                    <ImageView
                        android:id="@+id/framei"
                        android:layout_width="51dp"
                        android:layout_height="54dp"
                        android:layout_gravity="center"
                        android:src="@drawable/bicycle_frame" />

                    <TextView
                        android:layout_width="87dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Frame" />
                </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="141dp"
        android:layout_height="107dp"
        android:elevation="8dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.364"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.73">
        <CheckBox
            android:id="@+id/cb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout_editor_absoluteX="54dp"
                    tools:layout_editor_absoluteY="0dp">

                    <ImageView
                        android:id="@+id/seati"
                        android:layout_width="47dp"
                        android:layout_height="46dp"
                        android:layout_gravity="center"
                        android:src="@drawable/seat" />

                    <TextView
                        android:layout_width="87dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Seat" />
                </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="141dp"
        android:layout_height="107dp"
        android:elevation="8dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.73">
        <CheckBox
            android:id="@+id/cb4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout_editor_absoluteX="54dp"
                    tools:layout_editor_absoluteY="0dp">

                    <ImageView
                        android:id="@+id/sidestandi"
                        android:layout_width="59dp"
                        android:layout_height="54dp"
                        android:layout_gravity="center"
                        android:src="@drawable/sidestand" />

                    <TextView
                        android:layout_width="87dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Sidestand" />
                </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:layout_width="141dp"
        android:layout_height="107dp"
        android:elevation="8dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.671"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.161">

        <CheckBox
            android:id="@+id/cb5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout_editor_absoluteX="54dp"
                    tools:layout_editor_absoluteY="0dp">

                    <ImageView
                        android:id="@+id/wheeli"
                        android:layout_width="52dp"
                        android:layout_height="43dp"
                        android:layout_gravity="center"
                        android:src="@drawable/wheel" />

                    <TextView
                        android:layout_width="87dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Wheel" />
                </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/button"
        android:layout_width="141dp"
        android:layout_height="107dp"
        android:text="Proceed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.671"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.73" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="90dp"
        android:layout_height="247dp"
        android:text="Select Either 3 or all of the parts."
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.917"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.298" />


</android.support.constraint.ConstraintLayout>